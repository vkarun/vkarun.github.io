function subscribeToNewsletter(){var email=$("#subscriber-email").val();var subscriberForm=$("#subscriber-form");var error=0;subscriberForm.find(".validate-required").each(function(){if($(this).val()===""){$(this).addClass("field-error");error=1}else{$(this).removeClass("field-error")}});subscriberForm.find(".validate-email").each(function(){if(!/(.+)@(.+){2,}\.(.+){2,}/.test($(this).val())){$(this).addClass("field-error");error=1}else{$(this).removeClass("field-error")}});if(error===1){$(this).closest(".email-form").find(".form-error").fadeIn(200)}else{$(this).closest(".email-form").find(".form-error").fadeOut(200);$("<div />").addClass("form-loading").insertAfter(subscriberForm.find('input[type="submit"]'));subscriberForm.find('input[type="submit"]').hide();jQuery.ajax({type:"POST",url:"https://mandrillapp.com/api/1.0/messages/send.json",data:{key:"GADoirboxE46PVijI-zUFA",message:{from_email:"r@thebolt.club",from_name:"Bolt Website",headers:{"Reply-To":"r@thebolt.club"},subject:"Request For Newsletter Subscription from "+email,text:"A Rider with email \n\n"+email+"\n\n has requested for Bolt Club Newsletter subscription",to:[{email:"core@thebolt.club",type:"to"}]}},success:function(response){subscriberForm.find(".form-loading").remove();subscriberForm.find('input[type="submit"]').show();subscriberForm.find(".form-success").fadeIn(1e3);subscriberForm.find(".form-error").fadeOut(1e3);setTimeout(function(){subscriberForm.find(".form-success").fadeOut(500)},5e3);alert("You have been successfully subscribed for Bolt Club updates.")},error:function(errorObject,errorText,errorHTTP){subscriberForm.find(".form-error").attr("original-error",subscriberForm.find(".form-error").text());subscriberForm.find(".form-error").text(errorHTTP).fadeIn(1e3);subscriberForm.find(".form-success").fadeOut(1e3);subscriberForm.find(".form-loading").remove();subscriberForm.find('input[type="submit"]').show();alert("Oops! Some error occured. Please try to subscribe again.")}})}return false}function subscribeToGiveAway(){var email=$("#giveaway-email").val();var name=$("#giveaway-name").val();var giveawayForm=$("#giveaway-form");var error=0;giveawayForm.find(".validate-required").each(function(){if($(this).val()===""){$(this).addClass("field-error");error=1}else{$(this).removeClass("field-error")}});giveawayForm.find(".validate-email").each(function(){if(!/(.+)@(.+){2,}\.(.+){2,}/.test($(this).val())){$(this).addClass("field-error");error=1}else{$(this).removeClass("field-error")}});if(error===1){$(this).closest(".email-form").find(".form-error").fadeIn(200)}else{$(this).closest(".email-form").find(".form-error").fadeOut(200);$("<div />").addClass("form-loading").insertAfter(giveawayForm.find('input[type="submit"]'));giveawayForm.find('input[type="submit"]').hide();jQuery.ajax({type:"POST",url:"https://mandrillapp.com/api/1.0/messages/send.json",data:{key:"GADoirboxE46PVijI-zUFA",message:{from_email:"r@thebolt.club",from_name:"Bolt Website",headers:{"Reply-To":"r@thebolt.club"},subject:"[Bolt-Web] Request For Giveaway "+email,text:"A Rider with email \n\n"+email+"  ["+name+"]\n\n has requested for Bolt Giveaway",to:[{email:"core@thebolt.club",type:"to"}]}},success:function(response){giveawayForm.find(".form-loading").remove();giveawayForm.find('input[type="submit"]').show();giveawayForm.find(".form-success").fadeIn(1e3);giveawayForm.find(".form-error").fadeOut(1e3);setTimeout(function(){giveawayForm.find(".form-success").fadeOut(500)},5e3);alert("You have been successfully subscribed for Bolt Club updates.")},error:function(errorObject,errorText,errorHTTP){giveawayForm.find(".form-error").attr("original-error",giveawayForm.find(".form-error").text());giveawayForm.find(".form-error").text(errorHTTP).fadeIn(1e3);giveawayForm.find(".form-success").fadeOut(1e3);giveawayForm.find(".form-loading").remove();giveawayForm.find('input[type="submit"]').show();alert("Oops! Some error occurred. Please try to subscribe again.")}})}return false}